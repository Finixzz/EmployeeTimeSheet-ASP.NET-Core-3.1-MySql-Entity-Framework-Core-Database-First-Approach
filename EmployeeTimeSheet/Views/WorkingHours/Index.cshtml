@using Microsoft.AspNetCore.Identity
@model List<DAL.Models.Project>
@inject UserManager<DAL.Models.Aspnetusers> userManager;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br />


@if (Model.Count() == 0)
{
    <div class="card" style="margin:2% 0;">
        <div class="card-body">
            <h2>Woohoo, no work due in soon!</h2>
        </div>
    </div>
}
else
{
    <table id="project-table" class="table" style="margin:3% 3%;">
        <thead class="table-secondary">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Project name</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                int rowNum = i + 1;
                <tr >
                    <th scope="row">@rowNum</th>
                    <td>@Model.ElementAt(i).Name</td>
                    <td>
                        <a class="btn btn-info" asp-action="project" asp-controller="workinghours" asp-route-id="@Model.ElementAt(i).ProjectId">Manage working hours</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>

}



@section scripts{

    <style>
        #project-table tr th{
            text-align:center;
        }
        #project-table tr td {
            text-align: center;
        }
    </style>
    <script>
        $("document").ready(function () {
            $("#project-table").DataTable();


        })



    </script>

}
